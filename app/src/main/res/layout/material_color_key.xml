<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:parentTag="com.google.android.material.button.MaterialButtonToggleGroup">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/blueLabel"
            style="@style/LabelToggleButton"
            app:iconTint="@color/colorKeyBlue"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/redLabel"
            style="@style/LabelToggleButton"
            app:iconTint="@color/colorKeyRed"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/greenLabel"
            style="@style/LabelToggleButton"
            app:iconTint="@color/colorKeyGreen"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/yellowLabel"
            style="@style/LabelToggleButton"
            app:iconTint="@color/colorKeyYellow"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/purpleLabel"
            style="@style/LabelToggleButton"
            app:iconTint="@color/colorKeyPurple"
            />
</merge>

            <TextView
                android:id="@+id/textViewIso"
                style="@style/MetaValue"/>
            
        </TableRow>

        <TableRow
            android:id="@+id/rowWhiteBalance"
            style="@style/MetaRow" >

            <TextView
                android:id="@+id/TextView18"
                style="@style/MetaLabel"
                android:text="@string/whiteBalance"/>

            <TextView
                android:id="@+id/textViewWhite"
                style="@style/MetaValue"/>
            
        </TableRow>

        <TableRow
            android:id="@+id/rowDimensions"
            style="@style/MetaRow" >

            <TextView
                android:id="@+id/TextView20"
                style="@style/MetaLabel"
                android:text="@string/dimensions"/>

            <TextView
                android:id="@+id/textViewDimensions"
                style="@style/MetaValue"/>
            
        </TableRow>

        <TableRow
            android:id="@+id/rowLatitude"
            style="@style/MetaRow" >

            <TextView
                android:id="@+id/labelLat"
                style="@style/MetaLabel"
                android:text="@string/latitude"/>

            <TextView
                android:id="@+id/textViewLat"
                style="@style/MetaValue" />
            
        </TableRow>

        <TableRow
            android:id="@+id/rowLongitude"
            style="@style/MetaRow" >

            <TextView
                android:id="@+id/labelLon"
                style="@style/MetaLabel"
                android:text="@string/longitude"/>

            <TextView
                android:id="@+id/textViewLon"
                style="@style/MetaValue"/>
            
        </TableRow>

        <TableRow
            android:id="@+id/rowAltitude"
            style="@style/MetaRow" >

            <TextView
                android:id="@+id/labelAlt"
                style="@style/MetaLabel"
                android:text="@string/altitude" />

            <TextView
                android:id="@+id/textViewAlt"
                style="@style/MetaValue" />
            
        </TableRow>
    </TableLayout>

</RelativeLayout>
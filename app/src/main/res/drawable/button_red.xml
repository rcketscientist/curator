<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
     <item android:state_checked="true">
        <shape>
            <gradient
                android:startColor="@color/startRed"
                android:endColor="@color/endRed"
                android:angle="270" />
            <stroke
       			android:width="2dp"
        		android:color="@color/brightGreen" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/startRed" />
            <stroke
                android:width="1dp"
                android:color="@color/endRed" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/startRed"
                android:endColor="@color/endRed"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/endRed" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
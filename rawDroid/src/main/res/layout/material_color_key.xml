<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.ToggleGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.Material.ToggleGroup"
    android:id="@+id/sortOptions"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/sortHeader"
    android:layout_centerHorizontal="true">

    <android.support.v7.widget.ToggleButton
        android:id="@+id/blueLabel"
        style="@style/LabelToggleButton"
        android:buttonTint="@color/blue_700"/>

    <android.support.v7.widget.ToggleButton
        android:id="@+id/redLabel"
        style="@style/LabelToggleButton"
        android:buttonTint="@color/red_700"/>

    <android.support.v7.widget.ToggleButton
        android:id="@+id/greenLabel"
        style="@style/LabelToggleButton"
        android:buttonTint="@color/green_700"/>

    <android.support.v7.widget.ToggleButton
        android:id="@+id/yellowLabel"
        style="@style/LabelToggleButton"
        android:buttonTint="@color/yellow_700"/>

    <android.support.v7.widget.ToggleButton
        android:id="@+id/purpleLabel"
        style="@style/LabelToggleButton"
        android:buttonTint="@color/purple_700"/>

</android.support.v7.widget.ToggleGroup>


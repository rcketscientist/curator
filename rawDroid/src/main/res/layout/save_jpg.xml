<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/JPG"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#535353"
    android:padding="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Quality"
        android:id="@+id/labelQuality"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:id="@+id/valueQuality"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/seekBarQuality"
        android:layout_alignBottom="@+id/seekBarQuality"
        android:textAlignment="center"
        android:gravity="center"/>

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarQuality"
        android:max="100"
        android:progress="100"
        android:layout_below="@+id/labelQuality"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/valueQuality"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        style="@android:style/Widget.Material.SeekBar"
        android:layout_marginEnd="5dp"/>

</RelativeLayout>
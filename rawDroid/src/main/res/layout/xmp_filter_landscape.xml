<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/xmp_filter_landscape"
    android:layout_width="@dimen/xmp_filter_width"
    android:layout_height="match_parent"
    android:background="@color/light_blue_200"
    android:padding="3dp"
    android:clickable="true"
    tools:ignore="ContentDescription">
    <!-- Annoyingly, the clickable is necessary here due to a bug in nav drawer allowing click-thru-->

    <RelativeLayout
        android:id="@+id/sortHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="3dp">

        <ImageView
            android:id="@+id/sortIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:elevation="1dp"
            android:tint="@color/blue_grey_500"
            app:srcCompat="@drawable/ic_sort"/>

        <View
            android:id="@+id/leftSortDivider"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/sortIcon"
            android:background="@color/blue_grey_500"
            android:layout_marginEnd="3dp"/>

        <View
            android:id="@+id/rightSortDivider"
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/sortIcon"
            android:background="@color/blue_grey_500"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sortSection"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/sortHeader">

        <com.anthonymandra.widget.ToggleGroup
            android:id="@+id/sortGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:styleMaterial="true"
            app:exclusive="true"
            android:orientation="horizontal">

            <com.anthonymandra.widget.ToggleButton
                android:id="@+id/toggleSortAtoZ"
                style="@style/SortToggleButton"
                android:button="@drawable/ic_sort_az"
                android:buttonTint="@color/white"
                android:checked="false"
                android:gravity="center"/>

            <com.anthonymandra.widget.ToggleButton
                android:id="@+id/toggleSortZtoA"
                style="@style/SortToggleButton"
                android:gravity="center"
                android:button="@drawable/ic_sort_za"
                android:buttonTint="@color/white"/>

            <com.anthonymandra.widget.ToggleButton
                android:id="@+id/toggleSort0to9"
                style="@style/SortToggleButton"
                android:gravity="center"
                android:button="@drawable/ic_date_ascending"
                android:buttonTint="@color/white"/>

            <com.anthonymandra.widget.ToggleButton
                android:id="@+id/toggleSort9to0"
                style="@style/SortToggleButton"
                android:gravity="center"
                android:button="@drawable/ic_date_descending"
                android:buttonTint="@color/white"/>

        </com.anthonymandra.widget.ToggleGroup>

        <com.anthonymandra.widget.ToggleButton
            android:id="@+id/toggleSegregate"
            style="@style/SortToggleButton"
            android:gravity="center"
            android:button="@drawable/ic_segregate3"
            android:buttonTint="@color/white"
            android:elevation="2dp"
            android:layout_marginStart="3dp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/filterHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/sortSection"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp">

        <ImageView
            android:id="@+id/filterIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="1dp"
            android:layout_centerInParent="true"
            android:tint="@color/blue_grey_500"
            app:srcCompat="@drawable/ic_filter"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@id/filterIcon"
            android:background="@color/blue_grey_500"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="3dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/filterIcon"
            android:layout_alignParentEnd="true"
            android:background="@color/blue_grey_500"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/filterButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filterHeader">

        <ImageButton
            android:id="@+id/buttonFolders"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:src="@drawable/ic_folder_border"
            android:theme="@style/BrightButton"/>

        <ImageButton
            android:id="@+id/clearButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:theme="@style/FilterButton"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_filter_remove"/>

    </LinearLayout>


    <include
        android:id="@+id/labelAndRating"
        layout="@layout/xmp_core"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filterButtons"/>

    <RelativeLayout
        android:id="@+id/andAnchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/filterButtons"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="3dp">

        <View
            android:id="@+id/upperBullet"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_marginTop="23dp"
            android:layout_alignParentTop="true"
            android:background="@color/blue_grey_500"/>

        <View
            android:id="@+id/upperHorizontal"
            android:layout_width="17dp"
            android:layout_height="2dp"
            android:layout_marginTop="24dp"
            android:layout_alignParentTop="true"
            android:background="@color/blue_grey_500"/>

        <View
            android:id="@+id/upperVertical"
            android:layout_width="2dp"
            android:layout_height="8dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/upperHorizontal"
            android:background="@color/blue_grey_500"/>

        <com.anthonymandra.widget.ToggleButton
            android:id="@+id/toggleAnd"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:button="@drawable/and_selector"
            android:gravity="center"
            android:layout_below="@id/upperVertical"
            android:buttonTint="@color/white"
            android:elevation="2dp"/>

        <View
            android:id="@+id/lowerVertical"
            android:layout_width="2dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/toggleAnd"
            android:background="@color/blue_grey_500"/>

        <View
            android:id="@+id/middleHorizontal"
            android:layout_marginTop="4dp"
            android:layout_below="@+id/toggleAnd"
            android:layout_width="17dp"
            android:layout_height="2dp"
            android:background="@color/blue_grey_500"/>

        <View
            android:id="@+id/lowerBullet"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/lowerVertical"
            android:background="@color/blue_grey_500"/>

        <View
            android:id="@+id/middleBullet"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:background="@color/blue_grey_500"
            android:layout_marginTop="69dp"
            android:layout_alignParentStart="true"/>

    </RelativeLayout>

    <fragment
        android:id="@+id/keywordFragment"
        android:name="com.anthonymandra.rawdroid.KeywordFilterFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/labelAndRating"
        tools:layout="@layout/xmp_subject"
        tools:listitem="@layout/keyword_entry"/>

</RelativeLayout>
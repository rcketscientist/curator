<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/xmp_filter_landscape"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/xmp_filter_width"
    android:layout_height="match_parent"
    android:background="#111"
    android:padding="3dp"
    android:clickable="true">
    <!-- Annoyingly, the clickable is necessary here due to a bug in nav drawer allowing click-thru-->

    <TextView
        android:id="@+id/filterTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="left|bottom"
        android:text="@string/filterTitle"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignBottom="@+id/clearButton"/>

    <Button
        android:id="@+id/clearButton"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="@string/clear"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/clearButton"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingRight="5dp"
        android:text="@string/sortTitle"
        android:layout_below="@+id/divider"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:id="@+id/textView"
        android:layout_above="@+id/labelAndRating"/>

    <Spinner
        android:id="@+id/sortSpinner"
        style="@android:style/Widget.Holo.Spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:entries="@array/sortValues"
        android:gravity="end"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/divider"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_toEndOf="@+id/filterTitle"
        android:layout_toRightOf="@+id/filterTitle"/>

    <CheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/segregate"
        android:id="@+id/segregateCheckBox"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/sortSpinner"
        android:layout_centerHorizontal="true"
        android:checked="true"/>

    <include
        android:id="@+id/labelAndRating"
        layout="@layout/xmp_core"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/segregateCheckBox"/>

    <RadioGroup
        android:id="@+id/andOrRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/labelAndRating"
        android:gravity="left|center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="2dp"
        android:paddingTop="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/match"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/andRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AND"/>

        <RadioButton
            android:id="@+id/orRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="OR"/>

    </RadioGroup>

    <fragment
        android:id="@+id/keywordFragment"
        android:name="com.anthonymandra.rawdroid.KeywordFilterFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/andOrRadioGroup"
        tools:layout="@layout/xmp_subject"/>

</RelativeLayout>
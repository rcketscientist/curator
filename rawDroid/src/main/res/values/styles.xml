<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MetaTextAppearance">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="MetaLabel" parent="@style/MetaTextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:width">100sp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="MetaField" parent="@style/MetaTextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:width">155sp</item>
        <item name="android:maxLines">1</item>
        <!--<item name="android:maxLength">30</item>-->
    </style>

    <style name="ButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="ButtonColorKey">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="GalleryTheme" parent="@style/Theme.AppCompat">
        <!--<item name="colorPrimary">@color/materialIndigo900</item>-->
        <!--<item name="colorPrimaryDark">@color/xmpButtonColor</item>-->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/GalleryDialog</item>
        <item name="android:alertDialogTheme">@style/GalleryAlertDialog</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="toolbarStyle">@style/Widget.AppCompat.Toolbar</item>
        <item name="fastscroll__style">@style/DefaultScrollerStyle</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="actionModeShareDrawable">@drawable/ic_share</item>
        <!--<item name="showcaseViewStyle">@style/CustomShowcaseTheme</item>-->
        <item name="actionOverflowButtonStyle">@style/Custom.Widget.ActionButton.Overflow</item>
        <!--<item name="actionModeStyle">@style/GalleryActionMode</item>-->
    </style>

    <!--Fix for toolbar overflow being aligned wrong and seeming very close to last button-->
    <style name="Custom.Widget.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_overflow</item>
<!--        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>-->
    </style>

    <style name="DefaultScrollerStyle">
        <item name="fastscroll__bubbleTextAppearance">@android:style/TextAppearance.Small</item>
        <item name="fastscroll__bubbleColor">@android:color/white</item>
        <item name="fastscroll__handleColor">@android:color/darker_gray</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e51249d9</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#deffffff</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8affffff</item>
    </style>

    <style name="RightAlignDropDownItem" parent="Base.Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:gravity">end</item>
    </style>

    <style name="GalleryRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/gallery_rating_bar</item>
        <item name="android:isIndicator">true</item>
        <item name="android:minHeight">14dip</item>
        <item name="android:maxHeight">14dip</item>
    </style>

    <style name="GalleryDialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@color/Black_Medium</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GalleryAlertDialog" parent="@style/Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/Black_Medium</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FolderDialog" parent="@style/GalleryDialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:editTextBackground">@color/indigo_800</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/visible_selector</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="BrightButton" parent="Widget.AppCompat.Button.Colored">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="RecycleDialog" parent="@android:style/Theme.Dialog">
        <item name="android:ellipsize">start</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="ToggleButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:background">@drawable/toggle_background</item>
    </style>

    <style name="ImageToggleButton" parent="ToggleButton">
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageActionToggleButton" parent="ImageToggleButton">
        <item name="android:layout_width">@dimen/action_button_size</item>
        <item name="android:layout_height">@dimen/action_button_size</item>
    </style>

    <style name="LabelToggleButton" parent="@style/ImageActionToggleButton">
        <item name="android:button">@drawable/ic_square_rounded</item>
    </style>

    <style name="SortToggleButton" parent="@style/ImageActionToggleButton"/>

    <style name="RatingButton" parent="@style/ImageActionToggleButton">
        <item name="android:button">@drawable/btn_star_material</item>
    </style>

    <style name="MatchButton" parent="BrightButton">
        <item name="android:colorButtonNormal">@color/colorAccent</item>
        <item name="android:background">@drawable/and_selector</item>
    </style>

</resources>